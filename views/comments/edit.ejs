<%- include("../partials/header.ejs") %> 

    <div class="container">
        <h1 style="text-align: center;">Edit comment</h1>
        <div class="row">
            <div style="width: 40%; margin: 0 auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" class="form-group">
                    <div class="form-group">
                        <input type="text" name="comment[text]" value="<%= comment.text %> " class="form-control form-control-lg">    
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" required>    
                    </div>
                </form>
            </div>
        </div>
    </div>

