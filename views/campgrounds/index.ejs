<%- include("../partials/header") %>
<div class="container campgrounds">
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(campground => { %>
            <div class="col-md-4 col-sm-6 col-lg-3">
                <div class="card campground-card">
                    
                    <img src="<%= campground.image %>" class="card-img-top img-fluid" alt="image">  
                    <div class="card-title"><%= campground.name %> </div>
                    <p><a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More info</a></p>
                    
                </div>
                
            </div>
        <% }) %>
    </div>    
</div>

<%- include("../partials/footer") %> 