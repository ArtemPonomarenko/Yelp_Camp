<%- include("../partials/header.ejs") %> 

    <div class="container">
        <h1 style="text-align: center;">Edit campground: <%= campground.name %></h1>
        <div class="row">
            <div style="width: 40%; margin: 0 auto;">
                <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" class="form-group">
                    <div class="form-group">
                        <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control form-control-lg">
    
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control form-control-lg" required>
    
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" value="<%= campground.price %>" step="0.01" class="form-control form-control-lg" required>
    
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control form-control-lg" required>
    
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" required>    
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include("../partials/footer.ejs") %> 